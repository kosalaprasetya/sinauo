<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SinauO</title>
  </head>
  <body style="background-color: rgb(255, 255, 242);">
    <%- include('_navbar') %>
    <div class="container" style="margin-top: 50px;">
        <h1 style="display: flex; justify-content: center;">Edit Student</h1>
        <form method="post" action="/home/manage/edit/<%= student.id %>" style="margin-bottom: 20px;">
            <div class="mb-3">
              <label class="form-label">Email address</label>
              <input type="email" class="form-control" name="email" placeholder="Enter email address" value="<%= student.email %>">
              <% if (path) { %>
                <% let index = path.split(",").findIndex((el) => el === 'email') %>
                <small style="color: red;"><%= errors.split(",")[index] %></small>
            <% } %>
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter password">
                <% if (path) { %>
                    <% let index = path.split(",").findIndex((el) => el === 'password') %>
                    <small style="color: red;"><%= errors.split(",")[index] %></small>
                <% } %>
            </div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" name="name" placeholder="Enter your name" value="<%= student.name %>">
                <% if (path) { %>
                    <% let index = path.split(",").findIndex((el) => el === 'name') %>
                    <small style="color: red;"><%= errors.split(",")[index] %></small>
                <% } %>
            </div>
            <div class="mb-3">
                <label class="form-label">Picture link</label><small style="font-style: italic; color: rgb(117, 117, 117);">(optional)</small>  
                <input type="text" class="form-control" name="profilePicture" placeholder="Enter link for the image" value="<%= student.profilePicture %>">
            </div>
            <div class="mb-3">
                <label class="form-label">Bio</label><small style="font-style: italic; color: rgb(117, 117, 117);">(optional)</small>
                <textarea class="form-control" rows="3" name="bio" placeholder="Tell us about yourself"><%= student.bio %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
    <%- include('_scripts') %>
  </body>
</html>